<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".traditional.fragment.online.OnlineFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chatbot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_textview"
                android:text="Chatbot"
                android:drawablePadding="10dp"
                app:drawableLeftCompat="@drawable/baseline_chat_24" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_margin="15dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        app:cardCornerRadius="5dp"
        >
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Audio"-->
        <!--            android:textSize="16sp"-->
        <!--            android:paddingTop="10dp"-->
        <!--            android:paddingBottom="10dp"-->
        <!--            android:paddingStart="15dp"-->
        <!--            android:paddingEnd="15dp"-->
        <!--            android:background="@drawable/border_textview"-->
        <!--            android:drawablePadding="10dp"-->
        <!--            app:drawableLeftCompat="@drawable/baseline_play_circle_24" />-->

        <ImageView
            android:id="@+id/play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/baseline_play_circle_24"
            app:tint="@android:color/holo_orange_dark" />

    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_audio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/darker_gray"
            app:cardCornerRadius="5dp"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:background="@drawable/border_textview"
                android:drawableLeft="@drawable/baseline_audio_file_24"
                android:drawablePadding="1dp"
                />

            <TextView
                android:id="@+id/upload_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to Upload"
                android:textSize="16sp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/baseline_upload_24"
                android:drawablePadding="5dp"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/darker_gray"
            app:cardCornerRadius="5dp"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:background="@drawable/border_textview"
                android:drawableLeft="@drawable/baseline_image_24"
                android:drawablePadding="1dp"
                />

            <TextView
                android:id="@+id/upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to Upload"
                android:textSize="16sp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                app:drawableTopCompat="@drawable/baseline_upload_24" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/darker_gray"
            app:cardCornerRadius="5dp"
            android:layout_weight="0.3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:background="@drawable/border_textview"
                android:drawablePadding="1dp"
                app:drawableLeftCompat="@drawable/baseline_videocam_24" />

            <TextView
                android:id="@+id/upload_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to Upload"
                android:textSize="16sp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                app:drawableTopCompat="@drawable/baseline_upload_24" />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/border_textview"
        android:autofillHints="Enter text here..."
        android:hint="Enter text here..."
        android:textColorHint="@android:color/darker_gray"
        android:paddingStart="10dp"
        android:textSize="14sp"
        android:inputType="text" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border_textview_solid"
        />

    <TextView
        android:id="@+id/clear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear History"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/border_textview"
        />

</LinearLayout>